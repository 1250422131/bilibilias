<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.BILIBILIAS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary_variant</item>
        <!-- Customize your theme here. -->
        <item name="android:letterSpacing">0.05</item>


    </style>

    <style  name="BILIBILIAS_BLUE" parent="Theme.BILIBILIAS">
        <item name="colorPrimary">#3B82F6</item>
        <item name="colorPrimaryVariant">#BFDBFE</item>
        <item name="colorSecondary">#BFDBFE</item>
        <item name="colorSecondaryVariant">#3B82F6</item>
        <item name="android:statusBarColor" tools:targetApi="l">#BFDBFE</item>
        <item name="android:letterSpacing">0.05</item>
    </style>


    <style name="asVideoToolStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="collapsedTitleTextColor">@color/black</item>
        <item name="contentScrim">@color/color_303030</item>
    </style>

</resources>