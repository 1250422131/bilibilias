<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BILIBILIAS" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">@color/color_primary_light_text</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary_variant</item>
        <item name="android:letterSpacing">0.05</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="AsInputStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 底部线 默认颜色 -->
        <item name="colorControlNormal">@color/color_primary_variant</item>
        <!-- 底部线 EditText激活时颜色 -->
        <item name="colorControlActivated">@color/color_primary</item>
        <!-- 设置光标 -->
        <item name="android:textCursorDrawable">@color/color_primary</item>

    </style>

</resources>