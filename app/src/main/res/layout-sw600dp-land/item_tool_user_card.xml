<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cardBean"
            type="com.imcys.bilibilias.home.ui.model.UserCardBean.DataBean.CardBean" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/fragment_tool_video_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:orientation="horizontal"
                android:padding="5dp">


                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:id="@+id/item_tool_user_card_face"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:imageUrl="@{cardBean.face}"
                    android:scaleType="fitXY"
                    app:layout_constraintWidth_percent="0.1"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:round="400dp" />


                <TextView
                    android:layout_marginStart="15dp"
                    android:id="@+id/item_tool_user_card_name"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@{cardBean.name}"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:transitionName="videoTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/item_tool_user_card_face"
                    tools:layout_editor_absoluteY="5dp" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/item_tool_user_card_sign"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@{cardBean.sign}"
                    android:textColor="@color/color_text_hint"
                    android:textSize="21dp"
                    app:layout_constraintEnd_toEndOf="@+id/item_tool_user_card_name"
                    app:layout_constraintStart_toStartOf="@+id/item_tool_user_card_name"
                    app:layout_constraintTop_toBottomOf="@+id/item_tool_user_card_name" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>