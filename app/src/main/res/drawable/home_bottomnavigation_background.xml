<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框颜色值 -->


    <item android:bottom="1dp"  android:top="1dp" android:right="1dp" android:left="1dp"> <!--设置除了左边都有边框-->
        <shape>
            <corners
                android:bottomLeftRadius="0dp"
                android:topLeftRadius="30dp"
                android:bottomRightRadius="0dp"
                android:topRightRadius="30dp" /> <!--外面的角度 矩形也不用管-->
            <solid android:color="#FFFFFF" /> <!--里面的颜色-->
        </shape>
    </item>

</layer-list>