<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.imcys.bilibilias.base.view.GrayFrameLayout
        android:id="@+id/home_GrayFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/app_default_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/home_viewPage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </androidx.viewpager2.widget.ViewPager2>

            <com.google.android.material.bottomnavigation.BottomNavigationView

                android:id="@+id/home_bottomNavigationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:itemIconTint="@color/home_bottom_nav_seletor"
                app:itemTextColor="@color/home_bottom_nav_seletor"
                app:menu="@menu/home_menu_bottom_navigation">

            </com.google.android.material.bottomnavigation.BottomNavigationView>


        </LinearLayout>

    </com.imcys.bilibilias.base.view.GrayFrameLayout>
</layout>